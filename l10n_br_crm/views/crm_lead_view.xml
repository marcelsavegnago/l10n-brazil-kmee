        <!-- CRM Lead Form View  -->
        <record id="l10n_br_crm_leads_form" model="ir.ui.view">
            <field name="name">l10n_br_crm.leads.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_brazilian','=', True)]}</attribute>
                </field>
                <field name ="street" position="attributes">
                    <attribute name="attrs">{'invisible':  [('is_brazilian','=', True)]}</attribute>
                </field>
                <field name="street2" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_brazilian','=', True)]}</attribute>
                </field>
                <field name="city" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_brazilian','=', True)]}</attribute>
                </field>
                <field name="state_id" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_brazilian','=', True)]}</attribute>
                </field>
                <field name ="zip" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_brazilian','=', True)]}</attribute>
                </field>
                <xpath expr="//label[@for='street']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_brazilian','=', True)]}</attribute>
                </xpath>

                <field name ="country_id" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_brazilian','=', True)]}</attribute>
                </field>
                <field name="partner_id" position="after">
                    <field name="is_brazilian" invisible="1" />
                    <field name="participante_id" string="Customer"
                           attrs="{'invisible': [('is_brazilian', '!=', True)]}"
                           context="{'default_eh_consumidor_final': True,
                            'default_fone':phone,
                            'default_celular':mobile,
                            'default_email':email_from,
                            'default_fone_whatsapp':mobile,
                            'default_endereco': endereco,
                            'default_numero': numero,
                            'default_complemento': complemento,
                            'default_bairro': bairro,
                            'default_municipio_id':municipio_id,
                            'default_cep': cep,
                            'default_fantasia':partner_name,}"
                    />
                    <field name = "endereco"/>
                    <field name="numero"/>
                    <field name="complemento"/>
                    <field name="bairro"/>
                    <field name ="municipio_id"/>
                    <field name="cep"/>
                </field>

