        <record id="l10n_br_crm_view_create_opportunity_simplified" model="ir.ui.view">
                <field name="name">l10n_br_crm.leads.form</field>
                <field name="model">crm.lead</field>
                <field name="inherit_id" ref="crm.view_create_opportunity_simplified"/>
                <field name="arch" type="xml">
                    <field name="partner_id" position="after">
                        <field name="is_brazilian" invisible="1" />
